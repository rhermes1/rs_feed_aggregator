<% provide(:title, 'RSS Topics') %>
<% @topics.each do |topic| %>
  <% all_news = "++++" %>
  <% topic.get_all_topic_rss.each do |news| %>
    <% all_news += news[:title] + "++++" %>
  <% end %>
  <div class="news">
    <legend>
      <%= link_to topic.topic, topic %>
      <% if topic.tags.any? %>
        <% topic.tags.each do |tag| %>
          <small class="tag_style">
            <%= link_to tag.name, tag %>
          </small>
        <% end %>
      <% end %>
   </legend>
    <div class="new_contact">
      <marquee scrollamount="5" scrolldelay="1">
        <b><%= all_news %></b>
      </marquee> 
    </div>
    <%= link_to 'Show', topic %> |
    <%= link_to 'Edit', edit_topic_path(topic) %>
  </div>
<% end %>
